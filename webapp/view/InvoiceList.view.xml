<mvc:View
  controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
>
  <List id="invoiceList" items="{path: 'invoices>/Invoices', sorter: [{path: 'ShipperName', group: true}]}" headerText="{i18n>invoiceListTitle}" class="sapUiResponsiveMargin" width="auto">
    <headerToolbar>
      <Toolbar>
        <Title text="{i18n>invoiceListTitle}" />
        <ToolbarSpacer />
        <SearchField width="50%" search="onFilterInvoices" />
      </Toolbar>
    </headerToolbar>
    <items class="sapUiResponsiveMargin">
      <ObjectListItem title="{invoices>Quantity} x {invoices>ProductName}"
        number="{parts: ['invoices>ExtendedPrice', 'view>/currency'],
            type: 'sap.ui.model.type.Currency',
            formatOptions: {
              showMeasure: false
            }
          }"
        numberUnit="{view>/currency}"
        numberState="{= ${invoices>ExtendedPrice} > 50 ? 'Error' : 'Success'}"
      >
      <firstStatus>
        <ObjectStatus text="{path: 'invoices>Status', formatter: '.formatter.statusText'}" />
      </firstStatus>
      </ObjectListItem>
    </items>  
  </List>
</mvc:View>